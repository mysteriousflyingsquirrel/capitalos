rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can only access their own data
    match /users/{userId} {
      // Allow read/write if user owns this data
      allow read, write: if isOwner(userId);
      
      // Subcollections under user
      match /{collection}/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Shared market prices - any authenticated user can read
    // Only server (admin SDK) can write via GitHub Actions
    match /marketDailyPrices/{dateKey} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin SDK can write
      
      match /symbols/{symbolKey} {
        allow read: if isAuthenticated();
        allow write: if false; // Only admin SDK can write
      }
      
      match /locks/{lockId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Symbols registry - authenticated users can read and add symbols
    match /marketSymbolsRegistry/{symbolKey} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if false; // Don't allow deletion
    }
  }
}

